manualSD <- function(x){
  
  # calculate the standard deviation using purrr functions
  # sqrt(sum((xi - xm)^2) / (n - 1))
  
  x <- na.omit(x)
  lengthX <- length(x)
  meanX <- mean(x)
  
  sdOutputFunc <- compose(.dir = "forward",
                          ~ map_dbl(.x, ~ (. - meanX)^2),
                          ~ reduce(.x, sum),
                          ~ .x / (lengthX - 1),
                          ~ sqrt(.x))
  
  output <- sdOutputFunc(x)
  
  return(output)
  
}
